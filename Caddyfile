{
    auto_https off
}

:8080

handle /auth/* {
    reverse_proxy account-service:3000 {
        header_up Host "course-sphere-api.akagiyuu.dev"
    }
}

handle /user/* {
    reverse_proxy account-service:3000 {
        header_up Host "course-sphere-api.akagiyuu.dev"
    }
}

handle {
    reverse_proxy general-service:3000
}
